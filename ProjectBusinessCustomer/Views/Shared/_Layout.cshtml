<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <link href="~/Content/select2-bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("employées", "Customers", "Customer", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("sociétés", "Societies", "Society", new { area = "" }, new { @class = "navbar-brand" })
                    @*@Html.ActionLink("tâches", "Tasks", "WorkItem", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("projets", "Projects", "Project", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("synchronisation", "Synchronisation", "WorkItem", new { area = "" }, new { @class = "navbar-brand" })*@
                }
                else
                {
                    <span class="navbar-brand">BusinessCustomer</span>
                }

            </div>
            <div class="navbar-buttons navbar-header pull-right" role="navigation">
                @Html.Partial("_LoginPartial")
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.js-example-basic-single').select2({
                placeholder: ' -- Select Project--'
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>